droid = R2D2.new("D2-1F3B")

heading = 0
direction = -1

while true do
  droid.dome(heading)
  if (heading < -160)
    heading = -160
  elsif (heading == -160)
    droid.bipod
    direction *= -1
    heading += direction
  elsif (heading > 180)
    heading = 180
  elsif (heading == 180)
    droid.tripod
    direction *= -1
    heading += direction
  else
    heading += direction
  end
  Sleep::usleep(100)
end
